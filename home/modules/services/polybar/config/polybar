[module/fs]
type = internal/fs
mount-0 = /
mount-1 = /home
interval = 30
; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = "<bar-used>"
